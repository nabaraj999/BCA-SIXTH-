<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="30dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HostActivity">


    <fragment
        android:name="com.example.myapplication.Fragment.DemoFragment"
        android:id="@+id/demo_frag"
        android:layout_width="150dp"
        android:layout_height="150dp" />


    <fragment
        android:layout_marginTop="25dp"
        android:layout_below="@+id/demo_frag"
        android:name="com.example.myapplication.Fragment.TestFragment"
        android:id="@+id/test_frag"
        android:layout_width="150dp"
        android:layout_height="150dp" />
</LinearLayout>